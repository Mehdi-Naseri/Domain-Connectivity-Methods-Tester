        <Ellipse Height="49" HorizontalAlignment="Left" Margin="206,1,0,0" Name="ellipse5" Stroke="Black" VerticalAlignment="Top" Width="64" Grid.Row="5" />
        <TextBox Height="23" HorizontalAlignment="Center" Margin="79,14,34,0" Name="textBox1" VerticalAlignment="Top" Width="174" Text="http://www.google.com" />
        <Label Content="Website:" Height="28" HorizontalAlignment="Center" Margin="27,12,198,0" Name="label1" VerticalAlignment="Top" Width="62" />
